{
    "parser": "babel-eslint",
    "extends": ["airbnb"],
    "rules": {
        "no-plusplus": "off",
        "no-undef": "off",
        "no-unused-vars": "warn",
        "no-param-reassign": "off",
        "no-useless-constructor": "off",
        "class-methods-use-this": "off",
        "linebreak-style": 0,
        "max-len": [1, 145, 2, {"ignoreComments": true}],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    },
    "globals": {
        "localStorage": true
    }
}